@model IEnumerable<WebArtSampler.Models.SamCutAssignmentMaster>
@{
    ViewBag.Title = "ShowPendingDeliverytoAccept";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show Pending Delivery to Accept</h2>

<table class="table table-striped table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SampCutReqMaster.ReqNum)
        </th>
        <th>
            @Html.DisplayName("Atc/Ref");

        </th>
        <th>
            @Html.DisplayName("Style");

        </th>
        <th>

            @Html.DisplayNameFor(model => model.SampCutReqMaster.Qty)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.ReceivedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceivedBy)

        </th>
        <th>

            @Html.DisplayNameFor(model => model.PatternReqDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.SignedBYMaster)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.SignedDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.CompletedDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.MarkedCompletedBY)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.PatternMaster.PaternMasterName)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.CompletedQty)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SampCutReqMaster.ReqNum)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SampCutReqMaster.PatterRefMaster.PatterRefNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SampCutReqMaster.PatternStyle.StyleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SampCutReqMaster.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatternReqDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignedBYMaster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarkedCompletedBY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatternMaster.PaternMasterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedQty)
            </td>
            <td>
                @Html.ActionLink("Receive Delivery", "AcceptDelivery", new { id = item.CutAssignID }) |

            </td>
        </tr>
    }

</table>



