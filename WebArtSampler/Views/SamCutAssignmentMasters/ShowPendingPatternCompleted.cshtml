        <th>
            @Html.DisplayName("Atc/Ref");

        </th>
        <th>
            @Html.DisplayName("Style");

        </th>
        <th>

            @Html.DisplayNameFor(model => model.SampCutReqMaster.Qty)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.ReceivedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceivedBy)

        </th>
        <th>

            @Html.DisplayNameFor(model => model.PatternReqDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.SignedBYMaster)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.SignedDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.CompletedDate)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.Remark)
        </th>
       
        <th>

            @Html.DisplayNameFor(model => model.PatternMaster.PaternMasterName)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.CompletedQty)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CutAssignID)
