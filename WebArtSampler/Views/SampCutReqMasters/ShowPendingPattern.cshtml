
@model WebArtSampler.Areas.Planning.Models.CutplanPriority

<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        alert('Hi');
        $('.exporttable').DataTable();

    });
</script>

@{
    ViewBag.Title = "ShowPendingPattern";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowPendingPattern</h2>

<table class="table table-striped table-bordered table-hover exporttable">

    <thead>
        <tr>
            <th>

                Select
            </th>

            <th>
                ReqNum

            </th>
            <th>
                Fabric


            </th>

            <th>
                Buyer


            </th>
            <th>
                Patter Ref Num


            </th>
            <th>
                Style Name


            </th>

            <th>
                Sample Type



            </th>


            <th>
                Sample Required Date



            </th>


            <th>
                Pattern Req Date


            </th>

            <th>
                Pattern Master


            </th>

            <th>
                Added By

            </th>


            <th>
                Remark

            </th>
            <th>
                Status

            </th>
            <td>
                Qty

            </td>

            <td>
                Completed Qty

            </td>
            <td>
                Plan Qty

            </td>
            <td>
                Priority

            </td>
        </tr>
    </thead>

    <tbody>
        @{   int i = 0;
            foreach (var item in Model.RequestCuttingPrioritylist.ToList())
            {
                <tr>
                    <td>


                        @Html.EditorFor(model => Model.RequestCuttingPrioritylist[i].isSelected, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.HiddenFor(model => Model.RequestCuttingPrioritylist[i].CuttingAssignId, new { htmlAttributes = new { @class = "form-control" } })
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ReqNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fabric)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BuyerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatterRefNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StyleName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SampleType)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SampleRequiredDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatternReqDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PaternMasterName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AddedBy)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Expr1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletedQty)
                    </td>
                    <td>

                        @Html.TextBoxFor(model => Model.RequestCuttingPrioritylist[i].NewQty, new { htmlAttributes = new { @class = "form-control" } })



                    </td>
                    <td>

                        @Html.TextBoxFor(model => Model.RequestCuttingPrioritylist[i].Priority, new { htmlAttributes = new { @class = "form-control" } })



                    </td>

                </tr>
                i++;
            }
        }

    </tbody>


</table>




